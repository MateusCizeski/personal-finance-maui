<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="personal_finance_maui.Views.TransactionEdit"
             Title="TransactionEdit">
    <VerticalStackLayout Spacing="10">
        <Border 
        Margin="15" 
        Padding="15" 
        BackgroundColor="Black" 
        Stroke="Transparent" 
        StrokeShape="RoundRectangle 30"
     >
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, 30">
                <Label 
                Text="Update"
                HorizontalOptions="Center" 
                Grid.Row="0"
                Grid.Column="0"
                TextColor="White"
                />

                <Image 
                    HorizontalOptions="Center"
                    Grid.Row="0"
                    Grid.Column="1"
                    TextColor="White"
                    Source="close.png"
                    WidthRequest="17"
                    HeightRequest="17"
                >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizerTappedToClose" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>

        <Label Margin="30, 0" TextColor="Red" x:Name="LabelError" IsVisible="False" />

        <Grid ColumnDefinitions="*,*" Margin="30, 0">
            <RadioButton 
                IsChecked="True" 
                Content="Income"
                x:Name="RadioIncome"
            />

            <RadioButton 
                HorizontalOptions="End" 
                Grid.Column="1" 
                Content="Expense"
                x:Name="RadioExpanse"
            />

        </Grid>

        <Entry 
            x:Name="EntryName" 
            Placeholder="Name" 
            Margin="15, 0"
        />  

        <DatePicker x:Name="DatePickerDate" Margin="{OnPlatform Default='15,0', MacCatalyst='15, 15, 15, 0'}" />

        <Entry
            x:Name="EntryValue"
            Margin="15,0"
            Placeholder="Valor" 
        />

        <Button 
            Clicked="OnButton_Clicked_Save"
            Text="Save" 
            HorizontalOptions="Center"
        />
    </VerticalStackLayout>
</ContentPage>