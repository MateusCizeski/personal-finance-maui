<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="personal_finance_maui.Views.TransactionList"
        NavigationPage.HasNavigationBar="False"
        xmlns:converters="clr-namespace:personal_finance_maui.Libraries.Converters"
        Title="TransactionList"
>
    <ContentPage.Resources>
        <ResourceDictionary Source="/Resources/Styles/Colors.xaml"/>
        <ResourceDictionary>
            <converters:TransactionValueConverter x:Key="TransactionValueConverter" />
            <converters:TransactionValueColorConverter x:Key="TransactionValueColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <CollectionView x:Name="CollectionViewTransactions">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" ColumnDefinitions="50, *, Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="TapGestureRecognizer_Tapped"/>
                        </Grid.GestureRecognizers>
                        <Border 
                            WidthRequest="40" 
                            HeightRequest="40" 
                            BackgroundColor="White" 
                            StrokeShape="RoundRectangle 20"
                            Stroke="Transparent"
                        >
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="TapGestureRecognizerTappedToDelete" />
                            </Border.GestureRecognizers>
                            <Label 
                                Text="S"
                                FontSize="20"
                                BackgroundColor="White"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center" 
                                TextColor="Black"
                                Margin="11, 2"
                                Padding="2"
                             />
                        </Border>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="{Binding Name}"  TextColor="Black"/>
                            <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"  TextColor="#BABABA"/>
                        </VerticalStackLayout>

                        <Label 
                            Text="{Binding ., Converter={StaticResource TransactionValueConverter}}"
                            TextColor="{Binding ., Converter={StaticResource TransactionValueColorConverter}}"
                            VerticalOptions="Center"
                            Grid.Column="2"
                         />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button 
            Text="+"
            Clicked="OnClickToTransactionAdd"
            HorizontalOptions="Center"
        />

        <Border 
            Margin="10" 
            BackgroundColor="{StaticResource Black}" 
            Stroke="Transparent"
            Padding="10, 15"
            StrokeShape="RoundRectangle 30"
         >
            <Grid ColumnDefinitions="*, 80" RowDefinitions="Auto, Auto, 30, Auto, Auto">
                <Label 
                    Text="Saldo" 
                    TextColor="#979797" 
                    FontSize="18"
                />
                
                <Label 
                    x:Name="LabelBalance" 
                    Grid.Row="1" 
                    FontSize="32"
                />

                <Button 
                    Text="+"
                    Clicked="OnClickToTransactionAdd"
                    HorizontalOptions="Center"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    WidthRequest="54"
                    HeightRequest="54"
                    FontSize="48"
                    Padding="0"
                    CornerRadius="27"
                />

                <Label 
                    Text="Receitas" 
                    Grid.Row="3" 
                    TextColor="#979797" 
                    FontSize="14"
                />
                
                <Label 
                    x:Name="LabelIncome" 
                    Grid.Row="4" 
                    FontSize="14"
                />

                <Label 
                    Text="Despesas" 
                    Grid.Row="3" 
                    Grid.Column="1" 
                    TextColor="#979797" 
                    FontSize="14"
                />
                
                <Label 
                    Text="Despesas" 
                    Grid.Row="3" 
                    Grid.Column="1" 
                    TextColor="#979797" 
                    FontSize="14"
                />
                
                <Label 
                    x:Name="LabelExpanse" 
                    Grid.Row="4" 
                    Grid.Column="1" 
                    FontSize="14"
                />
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentPage>